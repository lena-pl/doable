<%= form_tag user_sessions_path, :method => :post do %>
  <div class="form-group">
    <%= label_tag :email %><br />
    <%= text_field_tag(name = "email", value = nil, options = {:class => 'form-control'}) %>
  </div>
  <div class="form-group">
    <%= label_tag :password %><br />
    <%= password_field_tag(name = "password", value = nil, options = {:class => 'form-control'}) %>
  </div>
  <div class="actions">
    <%= submit_tag "Login", class: "btn btn-block btn-lg btn-primary" %>
  </div>
<% end %>